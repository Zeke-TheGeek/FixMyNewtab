{
  "name": "Fix My Newtab",
  "description": "A simple extension I MADE which forces the new tab page back to a proper one, and also includes various other utilities to help me work more efficiently.",
  "version": "1.1.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "extmenu.html",
    "default_icon": "exticon.png"
  },

  "chrome_url_overrides": {
    "newtab": "Tabs/NewTab/index.html"
  },

  "permissions": [
	  "tabs",
	  "storage",
	  "activeTab"
  ],
	
  "icons": {
  "16": "exticon16.png",
  "32": "exticon32.png",
  "48": "exticon48.png",
  "128": "exticon128.png"
  },

  "content_scripts": [
    {
      "js": ["replacetab.js"],
      "matches": [
        "https://www.ddsb.ca/en/student.aspx",
		"https://www.youtube.com/*"
	  ],
	  "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "file:///*"
  ]
	
}